using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace wsbLab2
{
    class Employee
    {

        public string Name { get; set; }

        public int ID { get; set; }

        public static int EmployeeCounter { get; set; }

        public Employee()
        {

            EmployeeCounter++;

        }

        static Employee()
        {

            Console.WriteLine("Inicjalizacja typu!");

        }

        public static void PrintCounter()
        {

            Console.WriteLine(EmployeeCounter);

        }

    }
}
